{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .testimonials-wrapper {
    background: {{ section.settings.color_scheme }};
    overflow: hidden;
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 0;
  }

  @media screen and (min-width: 750px) {
    .testimonials__grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  .testimonial-card {
    background: rgb(var(--color-background));
    border-radius: var(--border-radius);
    padding: 2rem;
    box-shadow: rgba(var(--color-shadow), 0.1) 0px 4px 12px;
    border: 1px solid rgba(var(--color-foreground), 0.04);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: rgba(var(--color-shadow), 0.15) 0px 8px 24px;
  }

  .testimonial-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #4CAF50 0%, #66BB6A 100%);
  }

  .testimonial__content {
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    line-height: 1.6;
    color: rgb(var(--color-foreground));
    position: relative;
  }

  .testimonial__content::before {
    content: '"';
    font-size: 4rem;
    color: rgba(var(--color-foreground), 0.1);
    position: absolute;
    top: -1rem;
    left: -0.5rem;
    font-family: serif;
    line-height: 1;
    z-index: 0;
  }

  .testimonial__content p {
    position: relative;
    z-index: 1;
    margin: 0;
    font-style: italic;
  }

  .testimonial__author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .testimonial__avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .testimonial__author-info h4 {
    margin: 0 0 0.25rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: rgb(var(--color-foreground));
  }

  .testimonial__author-info .location {
    margin: 0;
    font-size: 0.875rem;
    color: rgba(var(--color-foreground), 0.7);
  }

  .testimonial__rating {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }

  .star {
    color: #FFD700;
    font-size: 1.1rem;
  }

  .star.empty {
    color: rgba(var(--color-foreground), 0.2);
  }

  /* Slider styles for mobile */
  .testimonials-slider {
    position: relative;
  }

  @media screen and (max-width: 749px) {
    .testimonials__grid {
      grid-template-columns: 1fr;
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 1rem;
      padding-bottom: 1rem;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .testimonials__grid::-webkit-scrollbar {
      display: none;
    }

    .testimonial-card {
      min-width: 280px;
      scroll-snap-align: center;
      flex-shrink: 0;
    }
  }

  /* Color scheme variations */
  .color-background-2 .testimonial-card {
    background: rgb(var(--color-background-2));
  }

  .color-inverse .testimonial-card {
    background: rgba(var(--color-background), 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .color-accent-1 .testimonial-card {
    background: rgba(var(--color-background), 0.95);
  }

  .color-accent-2 .testimonial-card {
    background: rgba(var(--color-background), 0.95);
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient testimonials-wrapper">
  <div class="testimonials page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 id="SectionHeading-{{ section.id }}" class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="rte center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" style="margin-bottom: 3rem;">
        {{ section.settings.description }}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="testimonials-slider">
        <div class="testimonials__grid" role="list">
          {%- for block in section.blocks -%}
            <div class="testimonial-card{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}{% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
              {%- if block.settings.rating > 0 -%}
                <div class="testimonial__rating">
                  {%- for i in (1..5) -%}
                    <span class="star{% if i > block.settings.rating %} empty{% endif %}">★</span>
                  {%- endfor -%}
                </div>
              {%- endif -%}

              {%- if block.settings.content != blank -%}
                <div class="testimonial__content">
                  <p>{{ block.settings.content }}</p>
                </div>
              {%- endif -%}

              {%- if block.settings.author != blank or block.settings.location != blank -%}
                <div class="testimonial__author">
                  <div class="testimonial__avatar">
                    {{ block.settings.author | slice: 0 | upcase | default: 'A' }}
                  </div>
                  <div class="testimonial__author-info">
                    {%- if block.settings.author != blank -%}
                      <h4>{{ block.settings.author }}</h4>
                    {%- endif -%}
                    {%- if block.settings.location != blank -%}
                      <p class="location">{{ block.settings.location }}</p>
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    {%- if section.blocks.size == 0 -%}
      <div class="testimonials__grid">
        {%- for i in (1..3) -%}
          <div class="testimonial-card">
            <div class="testimonial__rating">
              {%- for j in (1..5) -%}
                <span class="star">★</span>
              {%- endfor -%}
            </div>
            <div class="testimonial__content">
              <p>Add customer testimonials to showcase your store's happy customers.</p>
            </div>
            <div class="testimonial__author">
              <div class="testimonial__avatar">C</div>
              <div class="testimonial__author-info">
                <h4>Customer Name</h4>
                <p class="location">City, Country</p>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

